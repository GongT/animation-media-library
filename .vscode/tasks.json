{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "检查并修复代码格式",
			"icon": {
				"color": "terminal.ansiYellow",
				"id": "check-all",
			},
			"type": "shell",
			"command": "pnpm -w run pretty --unsafe",
			"options": {
				"env": {
					"NODE_OPTIONS": "--disable-warning DeprecationWarning --disable-warning=ExperimentalWarning",
				},
			},
			"problemMatcher": [],
		},
		{
			"label": "启动所有项目监视模式",
			"icon": {
				"color": "terminal.ansiGreen",
				"id": "eye-watch",
			},
			"type": "process",
			"command": "node",
			"args": ["${workspaceFolder}/node_modules/.bin/build-manager", "watch"],
			"problemMatcher": "$tsc-watch",
			"group": "build",
			"isBackground": true,
			"isBuildCommand": true,
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true,
			},
			"options": {},
			"runOptions": {
				"instancePolicy": "silent",
				"runOn": "folderOpen",
			},
		},
	],
}
